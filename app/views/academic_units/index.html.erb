
<div class="content-page">
    <div class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-xl-12">
                  <div class="breadcrumb-holder">
                    <%= link_to '<i class="fas fa-arrow-left"></i> '.html_safe, :back , class: "btn btn-secondary float-left" %>
                      <h1 class="main-title float-left">Unidades Acad√©micas </h1>
                      <ol class="breadcrumb float-right"></ol>
                      <div class="clearfix"></div>
                  </div>
                </div>
              </div>

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">	
                    <div class="card mb-3">
                      <div class="card-body">
                        <table>
                            <% @academic_units.each do |academic_unit| %>
                                <tr>
                                    <td><%= academic_unit.name %></td>
                                    <td><%= link_to 'Show', academic_unit_path(academic_unit) %></td>
                                    <td><%= link_to 'Edit', edit_academic_unit_path(academic_unit) %></td>
                                    <td><%= link_to 'Destroy', academic_unit_path(academic_unit),
                                        method: :delete,
                                        data: { confirm: 'Are you sure?' } %></td>
                                </tr>
                            <% end %>
                        </table>
                      </div>
                    </div>
                </div>
            </div>

        </div>            
    </div>
</div>    




